.user-title {
    display: flex;
    justify-content: center;
    align-items: center;
    padding:.5rem .8rem;
    &>img {
        width: 2.5rem;
        border-radius: .2rem;
    }
    &>span {
        flex: 1;
        padding: 0 .4rem;
        &>p {
            margin: 0;
            line-height: 1.2rem;
            color: #4100FF;
            &:last-child {
                font-size: 12px;
                color: #888;
            }
        }
    }
}
