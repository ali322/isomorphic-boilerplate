{
  "name": "isomorphic-boilerplate",
  "version": "1.0.0",
  "description": "isomorphic webapp boilerplate",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production node app.js",
    "linter": "esw -w --ext .js,.jsx,.es6 .",
    "test": "NODE_ENV=test ava --tap | tap-spec",
    "lint:js": "eslint client server",
    "lint:css": "stylelint \"client/bundle/**/*.{css,less,scss,styl}\"",
    "lint": "npm run lint:js && npm run lint:css"
  },
  "ava": {
    "files": [
      "__tests__/client/**/*.js",
      "__tests__/server/**/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "keywords": [
    "isomorphic boilerplate"
  ],
  "author": "alichen",
  "repository": "https://github.com/ali322/isomorphic-boilerplate",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.15.3",
    "classnames": "^2.2.5",
    "font-awesome": "^4.7.0",
    "jsdom": "^9.12.0",
    "koa": "2",
    "koa-bodyparser": "^2.3.0",
    "koa-convert": "^1.2.0",
    "koa-generic-session": "^1.11.4",
    "koa-methodoverride": "^2.0.0",
    "koa-router": "^7.1.0",
    "koa-static": "^2.0.0",
    "koa-views": "^5.2.0",
    "node-fetch": "^1.6.3",
    "swig": "^1.4.2",
    "vue": "^2.2.2",
    "vue-router": "^2.3.0",
    "vue-server-renderer": "^2.2.2",
    "vuex": "^2.2.1",
    "xhr2": "^0.1.4"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.22.0",
    "eslint": "^3.15.0",
    "eslint-plugin-css-modules": "^2.2.0",
    "eslint-plugin-import": "^2.2.0",
    "nock": "^9.0.4",
    "sinon": "^1.17.7",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "tap-spec": "^4.1.1",
    "vue-loader": "^11.1.4",
    "vue-ssr-webpack-plugin": "^1.0.2",
    "vue-template-compiler": "^2.2.3",
    "vuex-router-sync": "^4.1.2",
    "webpack": "^2.2.1"
  }
}
