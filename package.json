{
  "name": "isomorphic-boilerplate",
  "version": "1.0.1",
  "description": "isomorphic webapp boilerplate",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production node app.js",
    "test": "npm run test:client && npm run test:server",
    "test:e2e": "nva-test-e2e -s client/test/e2e/fixture/server.js -c client/test/e2e/fixture/conf.js",
    "test:client": "jest",
    "test:server": "BABEL_ENV=test ava --tap | tap-spec",
    "e2e": "node ./test/client/e2e/runner.js --config ./test/client/e2e/nightwatch.conf.js --env chrome",
    "lint:js": "eslint client server",
    "lint:css": "stylelint \"client/bundle/**/*.{css,less,scss,styl}\"",
    "lint": "npm run lint:js && npm run lint:css"
  },
  "jest": {
    "testMatch": [
      "**/client/test/unit/spec/**/*.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "moduleNameMapper": {
      "^@/(.+)$": "<rootDir>/client/$1"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/client/test/unit/coverage",
    "mapCoverage": true
  },
  "ava": {
    "files": [
      "server/test/spec/**/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "author": "alichen",
  "repository": "https://github.com/ali322/isomorphic-boilerplate",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.15.3",
    "browser-env": "^2.0.25",
    "classnames": "^2.2.5",
    "font-awesome": "^4.7.0",
    "jsdom": "^9.12.0",
    "koa": "2",
    "koa-body": "^2.0.1",
    "koa-methodoverride": "^2.0.0",
    "koa-router": "^7.1.0",
    "koa-session-minimal": "^3.0.3",
    "koa-static": "^3.0.0",
    "koa-views": "^5.2.0",
    "lru-cache": "^4.0.2",
    "normalize.css": "^7.0.0",
    "swig": "^1.4.2",
    "vue": "^2.2.2",
    "vue-router": "^2.3.0",
    "vue-server-renderer": "^2.2.2",
    "vuex": "^2.2.1",
    "vuex-router-sync": "^4.1.2"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.4.0",
    "babel-register": "^6.22.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-css-modules": "^2.2.0",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^21.2.1",
    "jest-serializer-vue": "^0.2.0",
    "jest-vue": "^0.8.2",
    "moxios": "^0.3.0",
    "nva-server": "^0.3.140",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "supertest": "^3.0.0",
    "tap-spec": "^4.1.1",
    "vue-loader": "^11.1.4",
    "vue-template-compiler": "^2.2.3",
    "vue-test-utils": "^1.0.0-beta.3"
  }
}
