{
  "name": "hyena",
  "version": "1.0.0",
  "description": "isomorphic webapp boilerplate",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production node app.js",
    "linter": "esw -w --ext .js,.jsx,.es6 .",
    "mocha": "mocha --reporter list --bail --check-leaks --compilers es6:babel-register __tests__/client/**/action.es6",
    "test": "NODE_ENV=test ava --tap | tap-spec",
    "develop": "gulp start",
    "hmr": "node ./task/hmr-server.js",
    "debug": "node-inspector --config ./task/inspector.config.js",
    "develop-static": "npm run static-build && gulp develop-webpack",
    "release-static": "npm run static-release && gulp deploy-webpack",
    "static-build": "webpack --config ./task/webpack.develop.js --display-error-details",
    "static-release": "webpack --config ./task/webpack.production.js --display-error-details"
  },
  "ava": {
    "files": [
      "__tests__/client/**/*.js",
      "__tests__/server/**/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "keywords": [
    "isomorphic boilerplate"
  ],
  "author": "alichen",
  "repository": "https://github.com/ali322/isomorphic-boilerplate",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.9.0",
    "classnames": "^2.2.0",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.1.0",
    "koa-convert": "^1.2.0",
    "koa-generic-session": "^1.11.1",
    "koa-methodoverride": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^2.0.0",
    "koa-views": "^5.0.2",
    "lodash": "^4.13.1",
    "normalize.css": "^4.2.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "reqwest": "^2.0.5",
    "swig": "^1.4.2",
    "xhr2": "^0.1.3"
  },
  "devDependencies": {
    "autoprefixer-loader": "^2.0.0",
    "ava": "^0.15.2",
    "babel-loader": "^6.2.4",
    "browser-sync": "^2.10.0",
    "css-loader": "^0.14.5",
    "del": "^1.2.0",
    "enzyme": "^2.4.1",
    "extract-text-webpack-plugin": "^0.8.2",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-inject": "^3.0.0",
    "gulp-inject-string": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "nock": "^3.1.1",
    "nodemon": "^1.3.7",
    "react-addons-test-utils": "^15.2.1",
    "react-hot-loader": "^1.3.0",
    "redux-mock-store": "^1.1.2",
    "sinon": "^1.17.2",
    "style-loader": "^0.12.3",
    "stylus-loader": "^1.4.2",
    "tap-spec": "^4.1.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
