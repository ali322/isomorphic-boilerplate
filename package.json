{
  "name": "isomorphic-boilerplate",
  "version": "1.0.0",
  "description": "isomorphic webapp boilerplate",
  "main": "app.js",
  "scripts": {
    "linter": "esw -w --ext .js,.jsx,.es6 .",
    "test": "NODE_ENV=test ava --tap | tap-spec",
    "lint:js": "eslint client server",
    "lint:css": "stylelint \"client/bundle/**/*.{css,less,scss,styl}\"",
    "lint": "npm run lint:js && npm run lint:css"
  },
  "ava": {
    "files": [
      "__tests__/client/**/*.js",
      "__tests__/server/**/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "keywords": [
    "isomorphic boilerplate"
  ],
  "author": "alichen",
  "repository": "https://github.com/ali322/isomorphic-boilerplate",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.15.3",
    "classnames": "^2.2.5",
    "font-awesome": "^4.7.0",
    "koa": "2",
    "koa-bodyparser": "^2.3.0",
    "koa-convert": "^1.2.0",
    "koa-generic-session": "^1.11.4",
    "koa-methodoverride": "^2.0.0",
    "koa-router": "^7.1.0",
    "koa-static": "^2.0.0",
    "koa-views": "^5.2.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-container": "^1.0.16",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "swig": "^1.4.2",
    "xhr2": "^0.1.4"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-register": "^6.22.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-css-modules": "^2.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "nock": "^9.0.4",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^1.3.1",
    "redux-mock-store": "^1.2.2",
    "sinon": "^1.17.7",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "tap-spec": "^4.1.1"
  }
}
